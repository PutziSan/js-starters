{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "outDir": "./lib/",

    "sourceMap": true,
    "declaration": false,

    "newLine": "LF",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
